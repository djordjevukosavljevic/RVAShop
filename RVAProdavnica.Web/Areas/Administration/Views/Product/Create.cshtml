 @model ProductModel

@{
    ViewData["Title"] = "Administration create product";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                        <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Create product</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="input-group input-group-outline my-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control w-100">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="input-group input-group-outline mb-3">
                            <div class="row col-12">
                                <div class="col-10">
                                    <label asp-for="Price" class="form-label"></label>
                                    <input asp-for="Price" class="form-control w-100">
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="col-2  d-flex justify-content-center align-content-center align-items-center">
                                    <div class="form-check form-switch d-flex align-items-center mb-3">
                                        <input class="form-check-input" type="checkbox" id="rememberMe" asp-for="Active">
                                        <label class="form-check-label mb-0 ms-3" asp-for="Active"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="input-group input-group-outline my-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-primary w-100">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@if (TempData["Response"] != null)
    {
        if (TempData["Response"].Equals(true))
    {
        <div class="position-fixed bottom-1 end-1 z-index-2">
            <div class="toast fade p-2 bg-white show" role="alert" aria-live="assertive" id="successToast" aria-atomic="true">
                <div class="toast-header border-0">
                    <i class="material-icons text-success me-2">
                        check
                    </i>
                    <span class="me-auto font-weight-bold">RVAPRODAVNICA </span>
                    <small class="text-body">1 min ago</small>
                    <i class="fas fa-times text-md ms-3 cursor-pointer" data-bs-dismiss="toast" aria-label="Close" aria-hidden="true"></i>
                </div>
                <hr class="horizontal dark m-0">
                <div class="toast-body">
                    @TempData["ResponseMessage"]
                </div>
            </div>
        </div>
    }
    else
    {   <div class="position-fixed bottom-1 end-1 z-index-2">
        <div class="toast fade p-2 mt-2 bg-white show" role="alert" aria-live="assertive" id="dangerToast" aria-atomic="true">
            <div class="toast-header border-0">
                <i class="material-icons text-danger me-2">
                    campaign
                </i>
                <span class="me-auto text-gradient text-danger font-weight-bold">RVAPRODAVNICA </span>
                <small class="text-body">1 min ago</small>
                <i class="fas fa-times text-md ms-3 cursor-pointer" data-bs-dismiss="toast" aria-label="Close" aria-hidden="true"></i>
            </div>
            <hr class="horizontal dark m-0">
            <div class="toast-body">
                @TempData["ResponseMessage"]
            </div>
        </div>
        </div>

    }
}   

