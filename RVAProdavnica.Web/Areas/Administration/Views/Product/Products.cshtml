@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Authors table</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0" id="product-panel">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Data Created</th>
                                <th class="text-secondary opacity-7 d-flex justify-content-center align-items">Options</th>
                            </tr>
                        </thead>
                        <tbody id="product-panel">
                        </tbody>
                    </table>
                </div>
            </div>
            <button id="load-more" class="btn-outline-secondary w-100">Load More</button>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/ajaxcalls.js"></script>
    <script>
        $(document).ready(function () {
                var url = "/Administration/Product/Rows";
                var dataObject = $("#product-panel");
                var pageNumber = 1;
                var rowsPerPage = 2;
                var data = { "pageNumber": pageNumber, "rowsPerPage": rowsPerPage }
                TableSearch(dataObject, url, data);

                $("#load-more").click(function () {
                    pageNumber++;
                    data = {"pageNumber": pageNumber, "rowsPerPage": rowsPerPage};  
                    TableSearch(dataObject, url, data);
                });
                
        });
    </script>
}
