<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - RVAProdavnica.Web</title>
    <partial name="Styles" />
    @await RenderSectionAsync("Styles", required: false);
</head>

<body class="g-sidenav-show  bg-gray-200">
    <partial name="Sidenavbar" />

    <main class="main-content border-radius-lg position-relative max-height-vh-100 h-100 border-radius-lg">
        <div class="container-fluid py-4">
            <partial name="Navbar" />
            @RenderBody()
            <partial name="Footer" />
        </div>
    </main>
    <partial name="Settings">@RenderBody()
</body>
<partial name="Scripts" />
@await RenderSectionAsync("Scripts", required: false);
</html>

